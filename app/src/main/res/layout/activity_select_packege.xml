<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="Back"
            android:background="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package A"
            android:textColor="@color/blue"
            android:fontFamily="@font/roboto_slab"
            android:textSize="15sp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"/>

        <!--boxes1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/box1"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_below="@id/home_discover"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="20dp">

            <!--CONTENT inside the box of image and textview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:gravity="center"
                android:orientation="vertical">

                <!--image inside the cardview-->
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:contentDescription="OUTING"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/outing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_condensed"
                    android:gravity="center"
                    android:text="OUTING"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Empty top half -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" /> <!-- Empty top half -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_half_screen">

            <!-- Text inside the rounded half screen -->
            <TextView
                android:layout_width="300dp"
                android:layout_height="375dp"
                android:layout_gravity="center"
                android:text="PAVILION\n\nMore info:\nCan accommodate up to 20 pax\nPrice: Php 25,000\n\n•Dishes (6-8): Appetizer, Grilled meat, Seafood, Vegetable, Soup, Dessert (with rice)\n•Drinks: Water, Soft drinks and/or juice, Alcoholic drinks"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </FrameLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>